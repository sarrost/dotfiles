# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 4
}

order += "battery 1"
order += "memory"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "disk /"
order += "volume master"
order += "wireless wlo1"
order += "ethernet enp3s0"
order += "tztime local"

battery 1 {
        integer_battery_capacity = true
        format = "%status %percentage %remaining %emptytime "
        format_down = "No battery"
        status_chr = "⚡ "
        status_bat = "⌁ "
        status_unk = "? "
        status_full = "✓"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
}

# wireless connection
wireless wlo1 {
        format_up = " %quality  %essid (%bitrate / %frequency) %ip "
        format_down = " conn down "
}

# ethernet connection
ethernet enp3s0 {
        format_up = "-- %speed ⌁ %ip"
        format_down = ""
}

# date time
tztime local {
        format = " %Y %b %d %a ~ %Hh%M "
}

load {
        format = " %1min "
}

cpu_usage {
	format = " %usage "
}

memory {
	format = " %available "
}

cpu_temperature 0 {
	format = " %degrees °C "
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

# storage
disk "/" {
        format = " %avail "
}

# audio
volume master {
        format = " %volume ♪ %devicename "
        format_muted = " [%volume] ♪ %devicename "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}