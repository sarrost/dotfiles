# use/move to tag
super + {_,shift+}{1-9}
	herbstclient {use_index,move_index} {0-8}

# use/move 10th tag
super + {_,shift+}0
	herbstclient {use_index,move_index} 9

# split client
super + ctrl + {a,s}
    herbstclient split {auto, explode}

# launch brave browser
super + b
	brave

# launch firefox browser
super + shift + b
	firefox-developer-edition

# launch chromium browser
super + ctrl + b
	chromium

# launch tor browser
super + alt + b
	tor-browser

# cycle clients
super + c
	herbstclient cycle

# launch apps
super + d
    rofi -show run

# lauch monitor layout switching script
super + shift + d
	monitor_rofi

# launch createscript script
super + e
	createscript_rofi

# fullscreen
super + f
	herbstclient fullscreen toggle

# launch gimp
super + g
	gimp

# focus client
super + {h,j,k,l}
    herbstclient focus {left,down,up,right}

# split client
super + ctrl + {h,j,k,l,}
    herbstclient split {left,bottom,top,right} 0.5

# move client
super + shift + {h,j,k,l}
    herbstclient shift {left,down,up,right}

# resize client
super + alt + {h,j,k,l}
    herbstclient resize {left,down,up,right} +0.05

# launch mount script
super + m
	mount_rofi

# launch umount script
super + shift + m
	umount_rofi

# restart network manager
super + shift + n
	sudo systemctl restart NetworkManager

# launch conf script
super + o
	cf_rofi

# toggle pseudotile
super + p
	herbstclient pseudotile toggle

# close and remove client
super + q
    herbstclient close_and_remove

# close or remove client
super + shift + q
    herbstclient close_or_remove

# reload/quit session
super + ctrl + shift + {q,r}
    herbstclient {quit, reload}

# remove focused frame and merge with neighbour
super + r
	herbstclient remove

# toggle floating layout
super + s
	herbstclient floating toggle

# launch split terminal
super + Return
	herbstfibonacci $TERMINAL

# launch terminal
super + shift + Return
    $TERMINAL

# temp frame border
super + semicolon
	herbstclient set frame_transparent_width 1 && sleep 3 && herbstclient set frame_transparent_width 0	

super + {Left,Right}
	pactl set-sink-volume 0 {-5%,+5%}

super + KP_Insert
	pactl set-sink-mute 0 toggle

super + bracketright
	scratchnote toggle

super + apostrophe
	scratchclock toggle

# toggle scratchpad
super + backslash
	scratchpad toggle

# cycle through tags
super + {comma,period}
	herbstclient use_index {-1,+1} --skip-visible

# explode frame into subframes
super + ctrl + space
	herbstclient split explode

super + BackSpace
	herbstclient cycle_monitor

# cycle window focus
super + {shift +,_}{Tab}
	herbstclient cycle_all {-1,+1}

